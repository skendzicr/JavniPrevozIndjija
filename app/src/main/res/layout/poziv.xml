<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/operateri"
        android:id="@+id/operateri"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/pozivanje"
        android:drawableStart="@drawable/ic_action_call"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/operateri"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/primedbeisugestije"
        android:id="@+id/primedbeisugestije"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Naslov"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/primedbeisugestije"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NapiÅ¡ite sugestiju..."
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/posalji"
        android:drawableStart="@drawable/ic_action_mail"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/body"
        android:layout_alignLeft="@+id/pozivanje"
        android:layout_alignStart="@+id/pozivanje" />


</RelativeLayout>